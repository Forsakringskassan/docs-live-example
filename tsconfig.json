{
    "extends": "@tsconfig/node20/tsconfig.json",
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",
        "emitDeclarationOnly": true,
        "sourceMap": true,
        "lib": ["es2023", "dom", "dom.iterable"],
        "module": "esnext",
        "declaration": true,
        "declarationDir": "./dist",
        "strict": true,
        "moduleResolution": "node",
        "isolatedModules": true
    },
    "include": ["./src/**/*.ts", "./src/**/*.vue"]
}
